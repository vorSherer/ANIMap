<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Anime Details</title>
  <link rel="stylesheet" href="../css/reset.css">
  <link rel="stylesheet" href="../css/base.css">
  <link rel="stylesheet" href="../css/layout.css">
  <link rel="stylesheet" href="../css/modules.css">
  <link href="https://fonts.googleapis.com/css2?family=Special+Elite&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="./app.js"></script>
</head>
<body>
  <section id="detailsPage">
    <%- include('../layout/header.ejs') %>
  <div class="pageText"><h1>DETAILS FOR  <%=anime.title%></h1></div>

<form action="/add" method="post">
<div id="outer">
  <div id="inner2">
  <div class="pageImage"><img src="<%= anime.image_url %>" /></div> 
</div>
<!-- <div class="details">
  <label class="firstLabel"> Id:</label> 
  <label name="id"><%=anime.id%></label> <br><br>
</div> -->

<div id="inner">
  <div class="details">
    <label class="firstLabel"> Title:</label> 
    <label name="title" id="title" value="<%= anime.title %>"><%=anime.title%></label> <br><br>
  </div>
 
  <div class="details">
    <label class="firstLabel"> Type:</label> 
    <label name="type"><%=anime.type%></label> <br><br>
  </div>
 
  <div class="details">
    <label class="firstLabel"> Rated:</label> 
    <label name="rated"><%=anime.rated%></label> <br><br>
  </div>
 
  <div class="details">
    <label class="firstLabel"> Episodes:</label> 
    <label name="episodes"><%=anime.episodes%></label> <br><br>
  </div>
</div>
</div>
  <div class="synopsisdetails">
    <label class="firstLabel"> Synopsis:</label> 
  <label name="synopsis"><%=anime.synopsis%></label> <br><br>
  </div>
  
  <div class="synopsisdetails">
  <label class="firstLabel"> Comments:</label> <br>
  <textarea name="comments" id="comments" cols="100" rows="7"></textarea><br><br>
</div>

<div id="r" class="details">
  <label class="firstLabel"> My ranking:</label> 
  <select   class="rank" name="myranking">   
    <option value="10" name="10" selected="selected">10</option>
    <option value="9" name="9">9</option>
    <option value="8" name="8">8</option>
    <option value="7" name="7">7</option>
    <option value="6" name="6">6</option>
    <option value="5" name="5">5</option>
    <option value="4" name="4">4</option>
    <option value="3" name="3">3</option>
    <option value="2" name="2">2</option>
    <option value="1" name="1">1</option>
  </select>
  <br><br>
  </div>

  <div id="c" class="details">
  <label class="firstLabel"> My category: </label> 
  <input  class="rank" list="category" name="category" required>

  <datalist id="category">
    <% myCategories.forEach(category => {%>      
    <option value ="<%=category.category%>" > <%=category.category%></option>
    <%})%> 
  </datalist> 
</div>

  <button id="return1" type="button" name="return" onclick="goBack()">Return</button>
  <button id="searchbutton" type="submit" name="add">Add to my list!</button>


  <input type="hidden" name="image_url" value="<%= anime.image_url %>">
  <input type="hidden" name="mal_id" value="<%= anime.mal_id %>">
  <input type="hidden" name="title" value="<%= anime.title %>">
  <input type="hidden" name="type" value="<%= anime.type %>">
  <input type="hidden" name="rated" value="<%= anime.rated %>">
  <input type="hidden" name="episodes" value="<%= anime.episodes %>">
  <input type="hidden" name="synopsis" value="<%= anime.synopsis %>">

</form>

</section>
<script>
  function myFunction() {
    var x = document.getElementById("myLinks");
    if (x.style.display === "block") {
      x.style.display = "none";
    } else {
      x.style.display = "block";
    }
  }
  </script>
</body>
</html>